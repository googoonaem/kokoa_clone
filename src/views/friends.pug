extends base
block content
    header.screen-header
        h1.screen-header__title Friends 
        .screen-header__icons 
            span 
                i.fas.fa-search.fa-lg 
            span 
                i.fas.fa-music.fa-lg 
            span 
                i.fas.fa-cog.fa-lg 
    a#friends-display-link
        i.fas.fa-info-circle 
        | Friend's Name display
        i.fas.fa-chevron-right.fa-xs
    main.main-screen 
        .user-component 
            .user-component__column 
                img.user-component__avatar.user-component__avatar--xl(src="public/images/478922.png")
                .user-component__text 
                    h4.user-component__title GOOGOO 
            .user-component__column 
        .friends-screen__channel 
            .friends-screen__channel-header 
                span Channel 
                i.fas.fa-chevron-up.fa-xs 
            .user-component 
                .user-component__column 
                    img.user-component__avatar.user-component__avatar--sm(src="public/images/11245.png")
                    .user-component__text 
                        h4.user-component__title.user-component__title--not-bold Channel
                .user-component__column 
                    div 
                        span 2
                        i.fas.fa-chevron-right.fa-xs
    include partials/nav
    #splash-screen 
        i.fas.fa-comment